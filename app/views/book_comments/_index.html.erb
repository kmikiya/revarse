 <table class='table'>
      <% book.book_comments.each do |comment| %>
 <tr>
<td>
    <%= attachment_image_tag comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg", size: "40x40" %>
  	<%= comment.user.name %>
</td>
<td><%= comment.comment %></td>
<td>
  <% if comment.user_id == current_user.id %>
    <%= link_to "delete", book_book_comment_path(book, comment.id), method: :delete, remote: true %>
  <% end %>
</td>
</tr>
<% end %>
</table>
